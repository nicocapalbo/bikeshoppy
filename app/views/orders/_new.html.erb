<div class="container">
  <%= simple_form_for([@bike, @order]) do |f| %>
    <%= f.hidden_field :bike_id, value: @bike.id%>
    <div class="form-inputs">

      <h4 class="mt-4 order-title mb-3">Customize your order</h4>
      <% @bike.components.each do |comp| %>

        <div class="mb-3 border">
          <p><%= comp.name %></p> 
          <% comp.options.each do |opt| %>
          <input type="radio" name="options[<%= comp.name.last(4)%>]" value="<%= opt.id%>" <%= "disabled" if opt.disabled %>> 
          <label><%= opt.name %></label> 
          <% end %>
        </div>


      <% end %>
    </div>
    <%= f.submit "Create order", class: "btn btn-primary" %>
  <% end %>
</div>